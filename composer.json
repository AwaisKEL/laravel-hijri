{
    "name": "pharaonic/laravel-hijri",
    "description": "Laravel - Hijri DateTime (Islamic)",
    "keywords": [
        "hijri",
        "islamic",
        "laravel hijri",
        "laravel islamic",
        "php hijri",
        "php islamic"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Moamen Eltouny (Raggi)",
            "email": "raggi@raggitech.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^11.0",
        "pharaonic/php-hijri": ">=1.1.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pharaonic\\Laravel\\Hijri\\HijriServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Pharaonic\\Laravel\\Hijri\\": "src"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
